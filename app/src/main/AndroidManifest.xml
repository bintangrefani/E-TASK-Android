<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lenovo.e_task">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".menu.SplashScreenActivity"
            android:theme="@style/SplashScreenStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".menu.LoginActivity"
            android:theme="@style/AppThemeWithNoActionBar" />
        <activity
            android:name=".menu.RegisterActivity"
            android:theme="@style/AppThemeWithNoActionBar" />
        <activity
            android:name=".menu.SidebarActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".menu.MentorActivity"
            android:theme="@style/AppThemeWithNoActionBar" />
        <activity
            android:name=".menu.EnrollActivity"
            android:theme="@style/AppThemeWithNoActionBar" />
        <activity
            android:name=".menu.EnrollOpenActivity"
            android:theme="@style/AppThemeWithNoActionBar" />
        <activity
            android:name=".menu.UploadTaskActivity"
            android:theme="@style/AppThemeWithNoActionBar" />
        <activity
            android:name=".menu.TaskDetailActivity"
            android:theme="@style/AppThemeWithNoActionBar" />
        <activity
            android:name=".menu.TaskListActivity"
            android:theme="@style/AppThemeWithNoActionBar" />
        <activity
            android:name=".menu.ProfileActivity"
            android:theme="@style/AppThemeWithNoActionBar"></activity>
        <activity
            android:name=".AllClassActivity"
            android:theme="@style/AppThemeWithNoActionBar"></activity>
    </application>

</manifest>