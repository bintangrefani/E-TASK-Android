<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true"
    android:id="@+id/detail_Class_click">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_margin="10dp">

            <TextView
                android:id="@+id/tv_nametask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task's Name"
                android:textSize="16dp"
                android:textColor="#000000"
                android:drawableLeft="@drawable/ic_work_black_16dp"
                android:drawablePadding="5dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task's Description"
                android:textSize="16dp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tv_deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6 September - 10 September"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                />

        <Button
            android:id="@+id/btn_menujudetail"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Detail"
            android:background="@drawable/button"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"/>

        </LinearLayout>

</android.support.v7.widget.CardView>